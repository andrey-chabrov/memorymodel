<VirtualHost *:80>

    WSGIDaemonProcess localhost python-path=/srv/memorymodel/src:/srv/memorymodel/env/lib/python2.7/site-packages
    WSGIProcessGroup localhost

    WSGIScriptAlias / /srv/memorymodel/src/wsgi.py

    <Directory /srv/memorymodel/src>
        <Files wsgi.py>
            Order deny,allow
            Allow from all
        </Files>
    </Directory>

    Alias /site-media "/srv/memorymodel/media"
    <Directory "/srv/memorymodel/media">
        Order allow,deny
        Options Indexes
        Allow from all
        IndexOptions FancyIndexing
    </Directory>

    Alias /static "/srv/memorymodel/static"
    <Directory "/srv/memorymodel/static">
        Order allow,deny
        Options Indexes
        Allow from all
        IndexOptions FancyIndexing
    </Directory>

</VirtualHost>
